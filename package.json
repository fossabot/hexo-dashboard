{
  "name": "hexo-dashboard",
  "version": "2.0.0",
  "description": "A hexo dashboard plugin, for live blog server.",
  "author": "thesadabc",
  "license": "MIT",
  "homepage": "https://github.com/Meteor2333/hexo-dashboard",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meteor2333/hexo-dashboard.git",
    "upstream": "https://github.com/xjpin/hexo-myadmin.git"
  },
  "bugs": {
    "url": "https://github.com/Meteor2333/hexo-dashboard/issues"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "main": "./server/dist/index.js",
  "types": "./server/dist/index.d.ts",
  "files": [
    "bin",
    "client/dist",
    "server/dist"
  ],
  "bin": {
    "hexo-dashboard": "./bin/hexo-dashboard"
  },
  "scripts": {
    "build": "pnpm run client:build && pnpm run server:build",
    "lint": "eslint . --fix --cache",
    "prepublishOnly": "pnpm run build",
    "client:dev": "vite dev client ",
    "client:build": "pnpm run client:type-check && vite build client",
    "client:type-check": "vue-tsc --build client/tsconfig.json",
    "client:lint": "eslint client --fix",
    "server:build": "tsc -p server/tsconfig.json",
    "server:lint": "eslint server --fix"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "codemirror": "^5.65.20",
    "codemirror-editor-vue3": "^2.8.0",
    "element-plus": "^2.13.1",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "qs": "^6.14.1",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tsconfig/node24": "latest",
    "@types/codemirror": "^5.60.17",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.4",
    "@types/qs": "^6.14.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.6.2",
    "hexo": "^8.1.1",
    "hexo-front-matter": "^5.0.0",
    "hexo-fs": "^5.0.1",
    "jiti": "^2.6.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vue-tsc": "^3.2.2"
  }
}
