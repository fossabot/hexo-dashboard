{
  "name": "hexo-dashboard",
  "version": "2.0.3",
  "description": "A hexo dashboard plugin, for live blog server.",
  "main": "server/dist/index.js",
  "bin": {
    "hexo-dashboard": "./bin/hexo-dashboard"
  },
  "scripts": {
    "prepublishOnly": "pnpm install && pnpm run clean && pnpm run lint && pnpm run build",
    "build": "pnpm run client:build && pnpm run server:build",
    "clean": "pnpm run client:clean && pnpm run server:clean",
    "lint": "eslint . --fix --cache",
    "client:dev": "vite dev client",
    "client:build": "vue-tsc --build client/tsconfig.json && vite build client",
    "client:clean": "vue-tsc --build client/tsconfig.json --clean",
    "client:lint": "eslint client --fix --cache",
    "server:build": "tsc --build server/tsconfig.json",
    "server:clean": "tsc --build server/tsconfig.json --clean",
    "server:lint": "eslint server --fix --cache"
  },
  "files": [
    "client/dist/",
    "server/dist/",
    "bin/"
  ],
  "types": "./server/dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meteor2333/hexo-dashboard.git",
    "upstream": "https://github.com/xjpin/hexo-myadmin.git"
  },
  "homepage": "https://github.com/Meteor2333/hexo-dashboard",
  "keywords": [
    "hexo",
    "admin",
    "dashboard"
  ],
  "author": "Meteor23333 <Meteor23333@outlook.com> (https://meteormc.cc)",
  "license": "MIT",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "codemirror": "^5.65.20",
    "codemirror-editor-vue3": "^2.8.0",
    "element-plus": "^2.13.1",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "qs": "^6.14.1",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tsconfig/node24": "latest",
    "@types/codemirror": "^5.60.17",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.4",
    "@types/qs": "^6.14.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.6.2",
    "hexo": "^7.3.0",
    "hexo-front-matter": "^4.2.1",
    "hexo-fs": "^4.1.3",
    "jiti": "^2.6.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vue-tsc": "^3.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
